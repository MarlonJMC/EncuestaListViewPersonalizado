<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LaPrincipal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFondo3"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ResultadoImgSegunCategoria"
        android:layout_width="wrap_content"
        android:src="@drawable/letterm"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/LayoutData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ResultadoComida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITULO"
            android:textColor="@color/colorFondo1"
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ResultadoCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categoria"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ResultadoCantidadTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0"
            android:textAlignment="textEnd"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/LaGeneros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RCantidadF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Cantidad: 0"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/RCantidadM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Cantidad: 0"
                android:textAlignment="center"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/RCantidadO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:text="Cantidad: 0"
                android:textAlignment="center"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ResultadoLugares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cantidad: 0"
            android:textAlignment="textEnd"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>
