<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/LaPrincipal"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ResultadoImgSegunCategoria"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/lettert"></ImageView>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/LayoutData"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textFontWeight="@android:integer/config_longAnimTime"
            android:layout_width="match_parent"
            android:id="@+id/ResultadoComida"
            android:textColor="@color/colorFondo1"
            android:textSize="24sp"
            android:text="TITULO"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ResultadoCategoria"
            android:text="Categoria"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/ResultadoCantidadTotal"
            android:text="Cantidad: 0"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/LaGeneros"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/RCantidadF"
                android:text="Cantidad: 0"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/RCantidadM"
                android:text="Cantidad: 0"
                android:layout_weight="4"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/RCantidadO"
                android:text="Cantidad: 0"
                android:layout_weight="4"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/ResultadoLugares"
            android:text="Cantidad: 0"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
